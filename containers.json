{
    "nginx": {
        "image": ":flask-service.nginx-container.6",
        "ports": {
            "80": "HTTP"
        },
        "environment": {
            "NGINX_ENVSUBST_OUTPUT_DIR": "/etc/nginx",
            "FLASK_HOST": "localhost",
            "FLASK_PORT": "5000"
        }
    },
    "flask": {
        "image": ":flask-service.flask-container.5",
        "command": ["flask run --host 0.0.0.0"],
        "ports": {
            "5000": "HTTP"
        },
        "environment": {
            "FLASK_APP": "app.py"
        }
    }
}

